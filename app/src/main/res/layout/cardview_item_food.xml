<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_dishes_id"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_dish_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/howtopicbg"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/dish_cat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|bottom"
                android:padding="5dp"
                android:text=" Category"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/dish_id"
            android:background="@drawable/howtobg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_all"
            android:layout_gravity="center|top"
            android:gravity="center|top"
            android:padding="15dp"
            android:layout_margin="3dp"
            android:text=" Name"
            android:textColor="#FFFF"
            android:textSize="16sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>